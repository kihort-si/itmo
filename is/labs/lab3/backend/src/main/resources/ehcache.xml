<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3
        http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="default">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache-template>

    <cache alias="ru.itmo.is.model.Person" uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type>ru.itmo.is.model.Person</value-type>
    </cache>

    <cache alias="ru.itmo.is.model.Movie" uses-template="default">
        <key-type>java.lang.Integer</key-type>
        <value-type>ru.itmo.is.model.Movie</value-type>
    </cache>

    <cache alias="ru.itmo.is.model.File" uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type>ru.itmo.is.model.File</value-type>
    </cache>

    <cache alias="default-query-results-region" uses-template="default"/>

</config>

