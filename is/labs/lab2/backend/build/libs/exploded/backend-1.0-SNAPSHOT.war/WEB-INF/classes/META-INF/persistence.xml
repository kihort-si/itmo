<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="is-lab-pu" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
<!--        <jta-data-source>java:/jdbc/MyDS</jta-data-source>-->

        <class>ru.itmo.is.model.Person</class>
        <class>ru.itmo.is.model.Movie</class>
        <class>ru.itmo.is.model.File</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/movies_db"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>

            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="eclipselink.target-database" value="PostgreSQL"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.jdbc.connection-policy" value="Isolated"/>
            <property name="eclipselink.cache.shared.default" value="false"/>
            <property name="eclipselink.target-server" value="WildFly"/>
        </properties>
    </persistence-unit>
</persistence>
